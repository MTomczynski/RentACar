@model RentACar.Models.CarRental.Rent
@{
    ViewBag.Title = "RedirectToPayment";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RentId)
        <div class="form-group">
            @Html.LabelFor(model => model.PriceToPay, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.Raw(ViewBag.Price)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Days, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.Raw(ViewBag.Days)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.Discount
            </div>
            <div class="col-md-10">
                @ViewBag.DiscountMsg
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pay" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="margin-top-20">
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
